    <div class="container caixaform">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="/finalizar" method="post">
                    <div class="mt-5 mb-4">
                        <label for="nomeCompleto" class="form-label"><b>Nome Completo</b></label>
                        <input type="text" class="form-control" name="nomeCompleto"
                            placeholder="Insira seu nome completo" required>
                    </div>
                    <div class="mb-4">
                        <label for="cpf" class="form-label"><b>CPF</b></label>
                        <input type="number" class="form-control" name="cpf"
                            placeholder="Insira seu CPF (APENAS NUMEROS)" required>
                    </div>
                    <div class="mb-4">
                        <label for="email" class="form-label"><b>E-mail</b></label>
                        <input type="email" class="form-control" name="email" placeholder="Insira seu e-mail" required>
                    </div>
                    <div class="mb-4">
                        <label for="telefone" class="form-label"><b>Telefone</b></label>
                        <input type="tel" class="form-control" name="telefone" placeholder="Insira seu telefone"
                            required>
                    </div>
                    <div class="mb-4">
                        <label for="endereco" class="form-label"><b>Endereço</b></label>
                        <input type="text" class="form-control" name="endereco" placeholder="Insira seu endereço"
                            required>
                    </div>
                    <div class="mb-4">
                        <label for="dataNascimento" class="form-label"><b>Data de Nascimento</b></label>
                        <input type="date" class="form-control" name="dataNascimento" required>
                    </div> <br><br>
                    <div class="text-center">
                        <button type="submit" class="btn btn-warning w-75 mb-3">
                            ENVIAR
                        </button>
                    </div>
